rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ===== HELPER FUNCTIONS =====
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }
    
    function isAdmin() {
      return isSignedIn() && (
        request.auth.token.admin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    function isOwnerOrAdmin(uid) {
      return isOwner(uid) || isAdmin();
    }
    
    // ===== USERS COLLECTION =====
    
    match /users/{uid} {
      allow create: if isOwner(uid);
      allow read: if isOwnerOrAdmin(uid);
      allow list: if isSignedIn(); // For global rankings and leaderboards
      
      // Allow users to update their profile and quiz data
      allow update: if isOwner(uid) && (
        // Protect admin-only fields
        !request.resource.data.keys().hasAny(['role', 'isAdmin', 'emailLower', 'uid', 'createdAt'])
      );
      
      allow update, delete: if isAdmin();
      
      // User subcollections
      match /categoryStats/{categoryId} {
        allow read: if isOwnerOrAdmin(uid);
        allow create, update: if isOwner(uid);
        allow delete: if isAdmin();
      }
      
      match /achievements/{achievementId} {
        allow read: if isOwnerOrAdmin(uid);
        allow create, update: if isOwner(uid);
        allow delete: if isAdmin();
      }
      
      match /quizAttempts/{attemptId} {
        allow read: if isOwnerOrAdmin(uid);
        allow create: if isOwner(uid);
        allow update, delete: if isAdmin();
      }
    }
    
    // ===== QUIZ ATTEMPTS (Top-level for admin queries) =====
    
    match /attempts/{attemptId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.uid || isAdmin());
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.uid;
      allow update, delete: if isAdmin();
    }
    
    // ===== QUIZ ATTEMPTS (Alternative collection name) =====
    
    match /quizAttempts/{attemptId} {
      allow read: if isSignedIn() && (request.auth.uid == resource.data.uid || isAdmin());
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.uid;
      allow update, delete: if isAdmin();
    }
    
    // ===== ACTIVITIES (Admin Dashboard) =====
    
    match /activities/{activityId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // ===== CONFIGURATION =====
    
    match /config/{configId} {
      allow read: if isSignedIn(); // All users can read config (questions per quiz, etc.)
      allow write: if isAdmin(); // Only admins can modify configuration
    }
    
    // ===== CONTENT COLLECTIONS =====
    
    match /questions/{questionId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /categories/{categoryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /leaderboard/{leaderboardId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // ===== ADMIN COLLECTIONS =====
    
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    match /adminSettings/{settingId} {
      allow read, write: if isAdmin();
    }
    
    // ===== SYSTEM COLLECTIONS =====
    
    match /system/{systemId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /metadata/{metadataId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // ===== FALLBACK RULE =====
    // Allow admins to access any other collections
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
